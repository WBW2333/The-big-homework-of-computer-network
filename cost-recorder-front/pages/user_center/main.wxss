
.avatar-container {
  background-color: #ffc83c;
  padding: 20rpx;
}
.avatar-container .col {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.avatar-container .col ._img {
  display: block;
  position: center;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  box-shadow: 2rpx 2rpx 4rpx black;
  border: 2rpx solid #e2e1e4;
}
.avatar-container .col ._div {
  display: inline-block;
  color: #322f3b;
  margin-top: 20rpx;
  font-size: 40rpx;
  font-style: italic;
  font-weight: bold;
}
.user-options {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 4rpx #322f3b;
  border: 2rpx solid #e2e1e4;
  display: flex;
  justify-content: space-between;
  font-weight: lighter;
}
.user-options .left-msg {
  height: 90rpx;
  font-size: 40rpx;
  padding-left: 30rpx;
  line-height: 90rpx;
}
.user-options .right-msg {
  height: 90rpx;
  font-size: 40rpx;
  padding-right: 30rpx;
  line-height: 90rpx;
}
.logout {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  font-weight: bolder;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 4rpx #322f3b;
  border: 2rpx solid #e2e1e4;
  justify-content: space-between;
  background-color: crimson;
  color: #e2e1e4;
  text-align: center;
}
.news-container {
  margin-bottom: 20rpx;
  width: 100%;
  height: 1000rpx;
}
.news-logo {
  width: 100%;
}